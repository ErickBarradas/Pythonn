genero = str(input("Voce e homem ou mulher: "))
altura = float(input('Insira sua altura: '))
pesohomem = (altura * 72.7) -58
pesomulher = (altura * 62.1)-44.7
if genero == 'Homem':
    print(f"Seu peso ideal é:{pesohomem}")
else:
    print(f"Seu peso ideal é:{pesomulher}")

#utilizalção de if e else
